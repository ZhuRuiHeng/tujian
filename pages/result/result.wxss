/* pages/result/result.wxss */
.container{
  padding:0;
}
.tab{
  text-align: center;
  width: 100%;
  -webkit-align-items: center;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
    display: -webkit-flex;
    display: flex;
   font-size: 26rpx;
}
.tab view{
  border:1px solid #ddd;
  padding:2rpx 10rpx;
  margin:0 20rpx;
}
.tab view.active{
    background: #357819;
    color:#fff;
}
.content{
  width:100%;
  padding:20rpx;
  box-sizing: border-box;
  text-align: center;
  background: #f2f2f2;
  margin: 20rpx 0;
}
.content .little{
  font-size: 22rpx;
}
.content .left{
  color: #357819;
  width: 40%;
  display: inline-block;
}
.content .right .top{
  font-size:28rpx;
}
.content .right{
  color: #141482;
  width: 58%;
  border-left:1px solid #ddd;
  display: inline-block;
}
.icons{
  width:100%;
  text-align: center;
}
.icons .typeall{
  width:33.3%;
  display: inline-block;
  font-size: 26rpx;
  padding:20rpx 0;
}
.icons .typeall .num{
  margin:0 auto;
  width:32rpx;
  height:32rpx;
  line-height: 32rpx;
  font-size:24rpx;
  border-radius: 50%;
  border:1px solid #000;
  color: #000;
}
/* 图表 */
.chart {
    width: 100%;
    height: 600rpx;
}